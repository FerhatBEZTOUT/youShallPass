<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearViewProfilRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:background="#E8E9ED"
    android:backgroundTint="#E8E9ED"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E8E9ED"
            android:backgroundTint="#E8E9ED"
            android:padding="12dp">

            <TextView
                android:id="@+id/textViewPseudo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ferhat"
                android:textColor="#2196F3"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnDeleteProfil"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnS1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:backgroundTint="#3F51B5"
                android:text="S1"
                android:textAlignment="center"
                android:textColor="#EAE4E4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnS2"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnS2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:backgroundTint="#3F51B5"
                android:text="S2"
                android:textColor="#EAE4E4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnAnnee"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnAnnee"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#4CAF50"
                android:text="Moyenne Annuelle"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btnDeleteProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FFFFFF"
                android:contentDescription="@string/app_name"
                android:minHeight="48dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_delete_24" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>